@model IEnumerable<easylife.Core.Entities.Invoice>
@{
    ViewBag.Title = "EasyLife | Dashboard |My Orders";
}
					<div class="container-fluid ">
						<ol class="breadcrumb">
						<li><a href=@Url.Action("index","UserHome") ><i class="fa fa-dashboard"></i> Home</a></li>
						<li><a href=@Url.Action("dashboard", new { Model.FirstOrDefault().MemberId}) ><i class="fa fa-dashboard"></i>Dashboard</a></li>
						<li><a  class="active"><i class="fa fa-dashboard"></i>My Orders</a></li>
						
						</ol>
					</div>
					
					
					
					
					<div class="container-fluid">
						
						
						<table class="table table-striped ">
							
							<tbody>
								<tr>
									
									<th>Invoice No</th>
									<th>Order Date</th>
									<th>Status</th>
									<th  colspan="2">Payment</th>
									
									
									
								</tr>
								@foreach (var item in Model)
                                {
                                    <tr>
									    <td> <a href=@Url.Action("invoices")>item.InvoiceId</a></td>
								        <td>item.Date</td>
									    <td>item.Status</td>
									    <td>item.PaymentStatus</td>
									    <td><a data-toggle="modal" data-target="#deleteModal" ><span class="glyphicon glyphicon-trash point" title="Remove"></span></a></td>
									
									
								    </tr>
								}
								
								
								
							</tbody>
						</table>
						
						
						
					</div>	