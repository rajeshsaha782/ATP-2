	<script>
	    $("#login").click(function () {

	        $("#signupModal").hide();

	    });
	    $("#sign").click(function () {

	        $("#loginmodal").hide();

	    });
	    $("#loginButton").click(function () {

	        var valid = true;
	        if ($("#email").val()=="")
	        {
	            valid = false;
	            $("#emailErr").text("*");
	        }
	        if ($("#password").val() == "")
	        {
	            valid = false;
	            $("#passwordErr").text("*");
	        }

	        if(valid)
	        {
                
              window.location = '@Url.Action("Dashboard","UserDashboard")'
	            
	        }
	        

	    });


	</script>

