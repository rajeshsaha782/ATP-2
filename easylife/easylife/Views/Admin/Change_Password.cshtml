@model easylife.Models.AdminViewModel.PasswordViewModel
@{
    ViewBag.Title = "Change_Password";
}

<style>
.w3-animate-bottom{overflow: scroll;
    overflow-x: hidden;
	position:relative;animation:animatebottom 0.4s}keyframes animatebottom{from{bottom:-300px;opacity:0} to{bottom:0;opacity:1}}
	
	::-webkit-scrollbar {
    width: 0px; 
    background: transparent; 
}
</style>		
<body class="w3-light-grey w3-animate-bottom ">
<div class="invoice" style="width:800px;background-color:lightskyblue">
		
			
				
				
				<div class="invoice-wrapper">
				
				
					<div class="invoice-wrap">
					
					
						<div style="text-align:center;background-color:#f47407;color:white;"><h3>CHANGE PASSWORD</h3></div>
					
				
						<div class="desc" style="margin-left:275;">
						
						
							<table class="pass" >
                                <tbody>
                                    @using (Html.BeginForm("ChangePassword", "Admin", new { mid = Model.MemberId }, FormMethod.Post))
                                    {

                                        <tr>

                                            <td align="center">
                                                <p>Old Password</p>
                                            </td>
                                            <td>
                                                <p><input class="form-control" id="cpass" name="cpass" type="password" value="" /></p>
                                            </td>
                                            @if (@Model.flag == 1)
                                            {
                                                <td style="color:red">*Wrong Password</td>
                                            }


                                        </tr>

                                        <tr>

                                            <td align="center">
                                                <p>New Password</p>
                                            </td>
                                            <td>
                                                <p><input class="form-control" id="npass" name="npass" type="password" value="" /></p>
                                            </td>


                                        </tr>
                                        <tr>

                                            <td align="center">
                                                <p>Retype New Password</p>
                                            </td>
                                            <td>
                                                <p><input class="form-control" id="rpass" name="rpass" type="password" value="" /></p>
                                            </td>

                                            @if (@Model.flag == 2)
                                            {
                                                <td style="color:red">*Password doesn't match</td>
                                            }


                                        </tr>


                                        <tr>

                                            <td colspan="2">
                                                <p><input type="submit" value="Save" class="btn btn-primary" style="margin-left:200px" /></p>
                                            </td>


                                        </tr>

                                    }
                                </tbody>

						</table>
						
							
						
						</div>
						
						
					   
				   
				   </div>
				   
				   
				 
					   
					 
				   
				   </div>
				   
				   
		</div>
		
						
					 
						
				
			
			
			</div>
			
			<script>
function confirmm() {
    var txt;
    if (confirm("Save Changes?")) {
        alert("Succesful");
        window.open('@Url.Action("Dashboard")', '_self');
		
    } else {
        txt = "You pressed Cancel!";
    }
    document.getElementById("demo").innercshtml = txt;
}
</script>
</body>