@model easylife.Models.AdminViewModel.OrdersViewModel
@{
    ViewBag.Title = "View_Orders";
}

<style>
        cshtml,body,h1,h2,h3,h4,h5 {font-family: 'Times New Roman', Times, serif}
             table{
			            border-collapse: collapse;
			            width: 100%;
			      }
         tr:hover {    background-color:darkgray;}
         .comboBox {
                      border-radius: 4px;
                      background-color: #fffff;
                      border: none;
                      color: black;
                      text-align: center;
                      font-size:15px;
                      width: 120px;
                      height: 30px;
                      border-radius:10px;
                      transition: all 0.5s;
                      cursor: pointer;
                      margin: 5px;
                    }

                h3 {
                        text-align:center;
                    }
</style>

	<div >
        @using (Html.BeginForm("View_Orders", "Admin", FormMethod.Post))
            {
            <select id="search by" class="comboBox" @Html.DropDownList("Searchby", new SelectList(new[] { "Any", "Product Code", "Invoice Code" }))
                    @Html.TextBox("searching")<input class="button" type="submit" value="Search" />
             }
	</div>

<body class="w3-animate-bottom">
	
  <!--for demo wrap-->

  <h1>Orders</h1>
    <h3>Total Order(s) Found: @Model.TotalOrder</h3>
  <section class="w3-card-4">
  <div class="tbl-header">
    <table cellpadding="0" cellspacing="0" border="0">
      <thead>
        <tr>
          <th>Order Code</th>
          <th>Product Code</th>
          <th>Invoice</th>
		  <th>Order Placed</th>
          <th>Product</th>
          <th>Order Status</th>
          <th>Payment Status</th>
		  
        </tr>
      </thead>
    </table>
  </div>
  <div class="tbl-content" style="background-color:white">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        @foreach (var item in Model.Orders)
        {
            var name = "";
            var status="";
            var paymentstatus="";
            foreach (var T in Model.Products)
            {
                if (item.ProductId == T.ProductId)
                {
                    name = T.ProductName;
                }
            }

            foreach (var T in Model.Invoices)
            {
                if (item.InvoiceId == T.InvoiceId)
                {
                    paymentstatus= T.PaymentStatus;
                    status = T.Status;
                }
            }


        <tr>
          <td>@item.OrderId</td>
          <td><a href='@Url.Action("View_Product_Details",new { id = @item.ProductId })'">@item.ProductId</a></td>
          <td><a href='@Url.Action("View_Invoice")'">@item.InvoiceId</a></td>
		  <td>@item.SellingDate</td>
          <td>@name</td>
            @{if ( status== "0")
                {
                    <td>On the way</td>
                }
                else if (status == "0")
                {
                    <td>Delivered</td>
                }
                else
                {
                    <td>Cancelled</td>
                }
            }
         
          @{if (paymentstatus == "0")
              {
                <td>UnPaid</td>
              }
              else if (status == "1")
              {
                <td>Paid</td>
              }

        }
		  
        </tr>
        }


