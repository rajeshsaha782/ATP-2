@{
    ViewBag.Title = "Add_Member";
}

		<style>
.w3-animate-bottom{overflow: scroll;
    overflow-x: hidden;
	position:relative;animation:animatebottom 0.4s} keyframes animatebottom{from{bottom:-300px;opacity:0} to{bottom:0;opacity:1}}
	
	::-webkit-scrollbar {
    width: 0px; 
    background: transparent; 
}
</style>
<body class="w3-light-grey w3-animate-bottom ">
<div class="invoice" style="width:800px;background-color:lightskyblue">
		
			
				
				
				<div class="invoice-wrapper">
				
				
					<div class="invoice-wrap">
					<div style="text-align:center;color:black;" class="ba"><h3>Add Member</h3></div>
				
						<div class="desc" style="margin-left:225;">
						
						
							<table class="reg" >
						
							<tr>
							
								<th>Name:</th>
								<td><input type="text"></td>
							
							</tr>
							
							<tr>
							
								<th>Email:</th>
								<td><input type="text"></td>
							
							</tr>
							
							<tr>
							
								<th>Password:</th>
								<td><input type="password"></td>
							
							</tr>
							
							<tr>
							
								<th>Retype Password:</th>
								<td><input type="password"></td>
							
							</tr>
							
							<tr>
							
								<th>Gender:</th>
								<td><input type="radio" name="gender" Value="m">Male
						<input type="radio" name="gender" Value="f">Female
						<input type="radio" name="gender" Value="o">Other</td>
							
							</tr>
							
							<tr>
							
								<th>Birth Date:</th>
								<td><input type="text"></td>
							
							</tr>
							<tr>
							
								<th>Cell No:</th>
								<td><input type="text"></td>
							
							</tr>
							<tr>
							
								<th>Position:</th>
								<td><input type="radio" name="position" Value="a">Admin
								<br/>
								<input type="radio" name="position" Value="s">Stock Executive
								<br/>
								<input type="radio" name="position" Value="o">Order Executive
								<br/>
								<input type="radio" name="position" Value="d">Delivery Man
								</td>
							</tr>
							
							<tr>
							
								<th>Status:</th>
								<td><input type="radio" name="status" Value="a">Active
								<br/>
								<input type="radio" name="status" Value="b">Blocked
								</td>
							</tr>
							
							<tr>
							<td>
							<button class="button" onclick="confirmm()">Confirm</button>
							</td>
							<td>
						<a href="Dashboard.html"><button class="button">Cancel</button></a>
						</td>
						
							</tr>
						
						</table>
						
						
							
						
						</div>
						
						
					   
				   
				   </div>
				   
				   
				 
					   
					 
				   
				   </div>
				   
				   
		</div>
		
