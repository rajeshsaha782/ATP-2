function confirmm() {
    var txt;
    if (confirm("Add This Member?")) {
        alert("Succesful");
		window.open("Dashboard.html",'_self');
		
    } else {
        txt = "You pressed Cancel!";
    }
    document.getElementById("demo").innerHTML = txt;
}
</script>
</body>