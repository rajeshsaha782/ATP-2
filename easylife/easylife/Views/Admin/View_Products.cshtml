             }
	    </div>

<body class="w3-animate-bottom">
	
  <!--for demo wrap-->

      <h1 style="color:	blue">Products</h1>
        <h3 style="color:	blue">Total Products(s) Found: @Model.TotalProduct</h3>
      <section class="w3-card-4">
      <div class="tbl-header">
        <table cellpadding="0" cellspacing="0" border="0">
          <thead>
            <tr>
              <th>Product Image</th>
              <th>Product Name[Code]</th>
                <td>Brand</td>
              <th>Total Sells</th>
		      <th>Price</th>
              <th>Last Purchase</th>
		      <th>Remaining Quantity</th>
		  
            </tr>
          </thead>
        </table>
      </div>
      <div class="tbl-content">
        <table cellpadding="0" cellspacing="0" border="0">
          <tbody>
           
               @foreach (var item in Model.Products)
               {
		        <tr>
                  <td><a href='@Url.Action("View_Product_Details", new { id = item.ProductId })'>@Html.Raw(String.Format("<img class=\"img-circle user\" src=\"/resources/{0}.jpg\">", item.ProductId))</a></td>
                  <td>@item.ProductName</td>
                  <td>@item.Brand</td>
                  <td>@item.TotalSell</td>
                  <td>@item.SellingPrice</td>
		          <td>@item.LastSold</td>
		          <td>@item.Quantity</td>
                    
                </tr>
            }

