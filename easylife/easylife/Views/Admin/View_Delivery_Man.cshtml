<body class="w3-animate-bottom ">
	
  <!--for demo wrap-->
    @{
        var count = 0;
        var pending = 0;
        var completed = 0;
        {
            foreach (var item in Model)
            {
                if (item.MemberIndetify.Type == "Delivery Man")
                {
                    count++;
                }
                if(item.ProductDeliveryActivity.Status==0)
                {
                    pending++;
                }
                else
                {
                    completed++;
                }
            }
        }
    }
  <h1>Delivery Man</h1>
    <h3 >Total Delivery Man(s) Found: @count</h3>
  <section class="w3-card-4">
  <div class="tbl-header">
    <table cellpadding="0" cellspacing="0" border="0">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Email</th>
          <th>Delivery Pending</th>
          <th>Delivery Completed</th>
		  <th>Delivery Zone</th>
		  <th>Assigned By</th>
		  <th>Availability</th>
        </tr>
      </thead>
    </table>
  </div>
  <div class="tbl-content">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
@foreach (var item in Model)
{
    if (item.MemberIndetify.Type == "Delivery Man")
    {
        <tr  onclick="location.href='@Url.Action("View_Profile_Delivery_Man",new { id = item.MemberIndetify.MemberId})'">
          <td>@Html.DisplayFor(modelItem => item.MemberIndetify.MemberId)</td>
          <td>@Html.DisplayFor(modelItem => item.MemberIndetify.Name)</td>
          <td>@Html.DisplayFor(modelItem => item.MemberIndetify.Email)</td>
          <td>@pending</td>
		  <td>@completed</td>
		  <td>@Html.DisplayFor(modelItem => item.DeliveryManDetails.Zone)</td>
		  <td>@Html.DisplayFor(modelItem => item.DeliveryManDetails.AssignedBy)</td>
            <td>@Html.DisplayFor(modelItem => item.DeliveryManDetails.Availability)</td>

